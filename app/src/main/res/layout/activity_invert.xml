<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invertLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invertbg"
    android:orientation="vertical"
    tools:context=".InvertActivity">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invertebrates"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World"
        android:textSize="24sp" />

    <GridLayout
        android:id="@+id/invertGrid"
        android:layout_width="match_parent"
        android:layout_height="613dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/insectPic"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/insects"
                    android:transitionName="fade_trans" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/arachnidPic"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/arachnids"
                    android:transitionName="fade_trans" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/molluscPic"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/molluscs"
                    android:transitionName="fade_trans" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/crustaceanPic"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/crustaceans"
                    android:transitionName="fade_trans" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/mediaButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_prev"></ImageButton>

        <ImageButton
            android:id="@+id/finishButton"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="169dp"
            android:layout_toEndOf="@+id/mediaButton"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/finish_icon"></ImageButton>
    </RelativeLayout>

</LinearLayout>